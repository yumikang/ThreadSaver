{
  "manifest_version": 3,
  "name": "ThreadSaver",
  "version": "1.0.0",
  "description": "트위터 타래를 저장하고 웹소설처럼 읽어보세요",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "http://localhost:4000/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": ["content/twitter-scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  }
}
